<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">
        //Можно задать вес компонента android:weightSum="1"
        //Если задается здесь, то задается для всех.
        //Если в компоненте, то задается для каждого.

    <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layout_gravity="start"
            android:text="First"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#ff8888"
            android:layout_weight="2"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:text="Second"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#88ff88"
            android:layout_weight="1"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layout_gravity="end"
            android:text="Third"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#8888ff"
            android:layout_weight="3"/>
    //Чтобы посчитать вес компонента, нужно разделить его вес на
    //сумму весов всех компонентов. Пример: хотим узнать вес
    //3-его элемента: 3/(2+1+3)=0,5 т.е 0.5 размера экрана.
  </LinearLayout>