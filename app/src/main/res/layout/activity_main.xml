<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">

    <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Top Start"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#ff8888"/>
    <TextView
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:alpha="0.5"
            android:text="Top Start"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#aa8888"/>
            //android:alpha="0.5" Прозрачность. И фон и текст прозрачен

    <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:text="Center"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#88ff88"/>
    <TextView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:text="Center"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#88efff88"/>
            //android:background="#88efff88" Четвертый байт (справа) -
            //прозрачность фона, при этом цвет текста непрозрачен

    <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:text="Bottom End"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#8888ff"/>

  </FrameLayout>