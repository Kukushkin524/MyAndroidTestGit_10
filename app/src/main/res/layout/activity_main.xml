<?xml version="1.0" encoding="utf-8"?>
        <!--Компоновщик Constraintlayout относительного
        расположения и относительного выравнивания-->

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">
    <Button
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:id="@+id/topView"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:background="#ff8800"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/center"
            android:layout_above="@id/center"/>

    <View
            android:id="@+id/bottomView"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:background="#00ff88"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/center"/>
    <View
            android:id="@+id/leftView"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:background="#0088ff"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center"/>

    <View
            android:id="@+id/rightView"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:background="#ff88ff"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/center"/>

    <TextView
            android:id="@+id/topLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="TopLeft"
            android:textColor="@color/white"
            android:background="#8844ee"
            app:layout_constraintStart_toStartOf="@id/leftView"
            app:layout_constraintTop_toTopOf="@id/topView"/>

    <TextView
            android:id="@+id/topRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="TopRight"
            android:textColor="@color/white"
            android:background="#8844ee"
            app:layout_constraintEnd_toEndOf="@id/rightView"
            app:layout_constraintTop_toTopOf="@id/topView"/>

    <TextView
            android:id="@+id/BottomLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Bottom Left"
            android:textColor="@color/white"
            android:background="#8844ee"
            app:layout_constraintBottom_toBottomOf="@id/bottomView"
            app:layout_constraintStart_toStartOf="@id/leftView"/>

    <TextView
            android:id="@+id/BottomRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Bottom Right"
            android:textColor="@color/white"
            android:background="#8844ee"
            app:layout_constraintBottom_toBottomOf="@id/bottomView"
            app:layout_constraintEnd_toEndOf="@id/rightView"/>

    <TextView
            android:id="@+id/topLeftParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Top Left Parent"
            android:textColor="@color/white"
            android:background="#8844aa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/topRightParer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Top Right Parent"
            android:textColor="@color/white"
            android:background="#774455"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/BottomLeftParer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Bottom Left Parent"
            android:textColor="@color/white"
            android:background="#8844aa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/BottomRightParer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Bottom Right Parent"
            android:textColor="@color/white"
            android:background="#774455"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:text="Between 2 Views"
            android:textColor="@color/white"
            android:background="#774455"
            app:layout_constraintEnd_toStartOf="@id/topLeftParent"
            app:layout_constraintStart_toEndOf="@id/topRightParer"
            app:layout_constraintTop_toBottomOf="@id/topLeftParent"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/white"
            android:background="#8844ee"
            android:text="Center Belween 4 Views"
            android:gravity="center"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="@id/BottomLeft"
            app:layout_constraintEnd_toEndOf="@+id/BottomRight"
            app:layout_constraintTop_toBottomOf="@id/BottomLeft"
            app:layout_constraintBottom_toTopOf="@id/BottomRightParer"/>

</androidx.constraintlayout.widget.ConstraintLayout>